// Global
.container
  max-width 1520px
  padding 0px 30px
  margin 0 auto

.site-container
  overflow hidden

.flex
  display flex

.btn-reset
  display block
  border none
  outline none
  background-color transparent
  cursor pointer
  padding 0

.btn
  font-size 16px
  line-height 14px
  letter-spacing 2.18182px
  color whiteColor
  padding 30px 80px
  text-transform uppercase
  border-radius 8px

.feature-btn
  border-radius 24px
  font-size 14px
  line-height 13px
  text-align center
  letter-spacing 2px
  color whiteColor
  padding 18px 30px
  margin-bottom 16px
  text-transform uppercase
  mix-blend-mode normal

.section-title
  font-size 64px
  line-height 80px
  color darkColor

  +w(bp-w-big)
    font-size 55px
    line-height 70px

  +w(bp-w-small)
    font-size 40px
    line-height 40px

  &--center
    text-align center
    max-width none

// Menu (sidebar)
.menu
  position fixed
  width 100%
  height 100%
  left -150vw
  top 0
  background-color neptuneColor
  transition left .3s ease-in-out
  z-index 10000

  &.menu--visible
    transition left .3s ease-in-out
    left 0

  &__nav
    width 100%
    height 100%
    overflow-y auto
    padding 30px 0

  &__list
    width 100%
    height 100%
    display flex
    flex-direction column
    justify-content center
    align-items center
    font-weight bold
    font-size 40px

  &__link
    transition color .2s ease-in
    color #fff

    &:hover
      transition color .2s ease-in
      color darken(neptuneColor, 30)

    &:not(:last-child)
      margin-bottom 40px

  &__close
    width 40px
    height 3px
    position absolute
    top 50px
    right 50px

  &__close--line
    coverdiv()
    background-color whiteColor

    &:first-child
      transform rotate(45deg)

    &:last-child
      transform rotate(-45deg)

// Header
.header
  position absolute
  width 100%
  top 0
  left 0
  z-index 1000

  &__container
    justify-content space-between
    padding 55px 30px
    align-items center

    +h(bp-h-big)
      padding 40px 30px

    +h(bp-h-medium)
      padding 30px

.social
  display flex
  align-items center

  &__item
    &:not(:last-child)
      margin-right 40px

  &__link
    display block
    transition opacity .3s ease

    &:hover
      opacity .8
      transition opacity .3s ease

    &--fb
      width 11px
      height 20px
      coverbg('svg/facebook.svg')

    &--tw
      width 20px
      height 16px
      coverbg('svg/twitter.svg')

.logo
  text-transform uppercase
  font-weight 800
  font-size 22px
  line-height 1
  text-align center
  letter-spacing 2px
  color whiteColor

.burger
  width 48px
  height 10px
  position relative

  &__line
    width 100%
    height 2px
    background-color whiteColor
    position absolute
    top 0
    left 0
    transition background .3s ease

    ~/:hover &
      transition background .3s ease
      background darkOrange

    &:last-child
      top auto
      bottom 0

// Hero
.hero
  height 100vh
  min-height 660px
  padding-top 200px
  coverbg('img/hero.png')

  +h(bp-h-big)
    padding-top 150px

  +w(bp-h-medium)
    padding-top 100px
    padding-bottom 30px
    height auto

  &__container
    position relative
    height 100%
    padding-bottom 200px

    +w(bp-w-medium)
      padding-bottom 0

  &__new-book
    border 1px solid whiteColor
    background-color rgba(darkColor, 40%)

    +h(bp-h-big)
      padding 15px 25px

  &__title
    max-width 35%
    margin-top 50px
    font-size 80px
    line-height 84px
    color whiteColor

    +h(bp-h-big)
      margin-top 45px
      font-size 70px
      line-height 70px

    +h(bp-h-medium)
      margin-top 70px
      font-size 60px
      line-height 60px

    +w(bp-w-large)
      max-width 50%

    +w(bp-w-big)
      max-width 100%

    +w(bp-w-medium)
      font-size 45px
      line-height 52px

  &__text
    font-family SFCompactText-Regular
    font-size 15px
    line-height 16px
    color whiteColor
    max-width 30%
    margin-top 45px

    +h(bp-h-big)
      margin-top 35px

    +w(bp-w-large)
      max-width 40%

    +w(bp-w-medium)
      max-width 100%

  &__buy-btn
    background darkOrange
    margin-top 45px
    transition background .3s ease

    +h(bp-h-big)
      padding 25px 60px

    +h(bp-h-medium)
      padding 20px 50px

    +w(bp-w-small)
      width 100%

    &:hover
      transition background .3s ease
      background darken(darkOrange, 10%)

  &__bottom
    position absolute
    left 50%
    bottom 0
    transform translateX(-50%)
    width calc(100% - 60px)
    display flex
    align-items flex-end

    // /
    +w(bp-w-medium)
      width auto
      margin-top 30px
      align-items flex-start
      position static
      left auto
      bottom auto
      transform none
      flex-direction column

  &__control
    position absolute
    z-index 10
    bottom 35px
    width 15px
    height 15px

  .control--left
    left 50px
    coverbg('svg/arrow-left.svg')

  .control--right
    right 50px
    coverbg('svg/arrow-right.svg')

.search-form
  width calc(100% - 500px)
  position relative
  border-radius 4px 0 0 0
  overflow hidden
  height 120px

  +w(bp-w-large)
    width calc(100% - 350px)

  +h(bp-h-big)
    height 100px

  +h(bp-h-medium)
    height 80px

  // /
  +w(bp-w-medium)
    border-radius 4px
    margin-bottom 30px
    width 50%
    height 60px

  +w(bp-w-small)
    width 100%

  &__field
    background-color #ffffff
    padding 50px 90px 50px 50px
    width 100%
    height 100%
    box-shadow inset 0px -2px 0px rgba(223, 223, 223, .5)
    font-size 16px
    line-height 19px
    color darkColor

    +w(bp-h-medium)
      padding 20px 90px 20px 20px

  &__button
    coverbg('svg/search.svg')
    size(18px)
    position absolute
    right 60px
    bottom 50%
    transform translateY(50%)

.main-slider
  box-shadow 0px 4px 4px rgba(0, 0, 0, .25)
  border-radius 8px 8px 0px 0px
  line-height 1
  width 500px
  overflow hidden
  position absolute
  right 0
  bottom 0

  +w(bp-w-large)
    width 350px

  +w(bp-w-medium)
    position static
    right auto
    bottom auto

  +w(bp-w-small)
    width 100%

  &__media
    height 280px
    position relative

    video
      width 100%

    +w(bp-w-large)
      height 100%

  &__media-play
    vcenter()
    cursor pointer
    width 50px
    height 50px
    z-index 10
    coverbg('svg/play.svg')

  &__text
    height 120px
    display flex
    align-items center
    justify-content center
    background-color neptuneColor
    color whiteColor
    font-size 12px
    line-height 1
    text-align center
    letter-spacing 2.18px
    text-transform uppercase

    +h(bp-h-big)
      height 100px

    +h(bp-h-medium)
      height 80px

// Become
.become
  padding 120px 0
  background-color #fff
  position relative

  +w(bp-w-large)
    padding 90px 0

  &__title
    max-width 45%
    margin-bottom 80px

    +w(bp-w-big)
      max-width 100%

    +w(bp-w-medium)
      text-align center

  &__list
    display grid
    grid-template-columns repeat(auto-fit, minmax(300px, 1fr))
    grid-gap 20px

  &__item
    position relative
    margin 0 auto
    max-width 350px
    border-radius 10px
    overflow hidden

    &:hover
      &:before
        opacity .9
        visibility visible

      .become__text
        opacity 1
        visibility visible
        transform translate(0)

    &:before
      content ''
      transition opacity .3s ease
      background neptuneColor
      mix-blend-mode normal
      opacity 0
      visibility hidden
      border-radius 4px
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      z-index 100

  &__image
    width 100%
    max-height 100%
    object-fit cover

  &__text
    position absolute
    z-index 100
    left 40px
    bottom 60px
    font-size 24px
    line-height 31px
    color whiteColor
    transform translateY(200px)
    transition transform .3s ease-in-out

// Featured section
.featured
  position relative
  padding 100px 0
  height 900px
  coverbg('img/storiesBG.png')

  +w(bp-w-large)
    height 700px

  +w(bp-w-big)
    height auto
    padding-bottom 0

  &__container
    height 100%
    display flex
    flex-direction column
    justify-content flex-end

  &__stories
    padding 75px
    background-color featuredLeftColor
    mix-blend-mode normal
    opacity .94
    width 35%
    height 100%
    position absolute
    right 0
    top 0

    +w(bp-w-large)
      width 45%
      padding 50px

    +w(bp-w-big)
      margin-top 30px
      padding 30px
      position relative
      width 100%

  &__title
    font-size 64px
    line-height 80px
    color #FFFFFF
    margin-bottom 60px

    +w(bp-w-large)
      font-size 55px
      line-height 60px
      margin-bottom 20px

    +w(bp-w-big)
      font-size 35px
      margin-bottom 0px

.blog-arcticle
  &__category
    background darkOrange

  &__title
    font-size 48px
    line-height 64px
    color whiteColor
    margin-bottom 16px

    +w(bp-w-big)
      font-size 37px
      line-height 44px

  &__text
    font-size 14px
    line-height 21px
    color whiteColor
    margin-bottom 40px
    max-width 40%

    +w(bp-w-big)
      max-width 80%

  &__btn
    margin-top 45px
    background-color neptuneColor
    transition background .3s ease

    &:hover
      transition background .3s ease
      background-color darken(neptuneColor, 10%)

.feature-list
  display flex
  flex-flow column nowrap

  &__item
    border-bottom 1px solid #4d5a5f

    &:last-child
      border-bottom 1px solid transparent

  &__article
    display flex
    align-items center
    padding 30px 0

    +w(bp-w-big)
      padding 15px 0

  &__image
    border-radius 100%
    flex-shrink 0
    width 48px
    height 48px
    overflow hidden
    margin-right 32px

    img
      width 100%
      height 100%
      object-fit cover

  &__info
    display flex
    flex-flow column nowrap
    align-self flex-start

  &__text
    color #fff
    font-size 18px
    line-height 24px
    margin-bottom 8px

  &__date
    font-family SFProText-Regular
    font-size 11px
    line-height 13px
    color rgba(255, 255, 255, .502293)

.videos
  padding-top 100px
  padding-bottom 95px

  +w(bp-w-large)
    padding-top 60px
    padding-bottom 55px

  &__desc
    margin-top 18px
    display block
    margin 0 auto
    text-align center
    max-width 40%
    font-family SFProText-Regular
    font-size 16px
    line-height 24px
    text-align center
    color lightGreyColor
    margin-bottom 40px

    +w(bp-w-big)
      max-width 100%

    +w(bp-w-medium)
      margin-top 30px

  .swiper-slide
    padding 40px
    width 890px
    display flex
    flex-direction column
    justify-content space-between
    min-height 550px

    +w(bp-w-big)
      min-height 450px
      width 700px

    +w(bp-w-medium)
      min-height 350px
      width 470px

    +w(bp-w-small)
      width 300px

    &:before
      content ''
      background linear-gradient(180deg, rgba(0, 0, 0, .0001) 50%, rgba(0, 0, 0, .461617) 100%)
      border-radius 8px
      position absolute
      top 0
      left 0
      width 100%
      height 100%

    &--active
      transition transform .3s ease
      transform scaleX(1.17) scaleY(1.1)

// Swiper
.slider__container
  width 100%
  height 100%
  position relative

  .swiper-slide
    background #E3E3E3
    box-shadow 0px 4px 4px rgba(0, 0, 0, .25)
    border-radius 8px
    transition transform .3s ease
    position relative

    .swiper-text
      font-size 32px
      line-height 40px
      color #fff
      position relative
      z-index 100

  .slide-1
    coverbg('img/videos2.png')

  .swiper-play
    width 80px
    height 80px
    border-radius 50%
    background-color darkOrange
    position relative
    cursor pointer

    +w(bp-w-medium)
      width 50px
      height 50px

    &:before
      content ''
      position absolute
      top 50%
      left 55%
      transform translate(-35%, -50%)
      css-triangle(15px, #fff, right)

// Newsletter section
.newsletter
  padding-top 90px
  padding-bottom 150px
  position relative

  +w(bp-w-big)
    padding-top 40px
    padding-bottom 30px

  &__content
    max-height 800px
    coverbg('img/newsletterBG.png')
    padding 180px 130px
    display flex
    border-radius 10px
    position relative

    +w(bp-w-big)
      padding 90px 50px
      padding-bottom 0
      justify-content center
      align-items center
      flex-direction column

    +w(bp-w-small)
      padding 50px 30px 0

    &:before
      content ''
      coverdiv()
      background rgba(28, 46, 61, .46)

  &__info, &__signup
    position relative
    z-index 100

  &__info
    width 40%

    +w(bp-w-big)
      width 50%
      text-align center

    +w(bp-w-medium)
      width 100%

  &__title
    color #fff

  &__text
    margin-top 40px
    font-family SFCompactText-Regular
    font-size 16px
    line-height 21px
    color #FFFFFF

.signup-form
  width 35%
  background #fff
  border-radius 8px
  overflow hidden
  position absolute
  bottom -90px
  right 130px

  +w(bp-w-big)
    margin-top 40px
    width 50%
    position relative
    bottom auto
    right auto
    margin-bottom 50px

  +w(bp-w-medium)
    width 100%

  &__contaner
    padding 75px 70px

    +w(bp-w-large)
      padding 55px 50px

    +w(bp-w-big)
      padding 35px 30px

  &__group
    width 100%

    &:not(:last-child)
      margin-bottom 32px

  &__label
    font-size 11px
    line-height 13px
    letter-spacing 2px
    color darkColor
    display flex
    flex-flow column nowrap

  &__input
    padding 10px 0
    border-bottom 1px solid #bbc0c5

  &__submit-btn
    background-color neptuneColor
    width 100%
    height 90px
    text-transform uppercase
    font-size 12px
    line-height 14px
    text-align center
    letter-spacing 2.18182px
    color #FFFFFF
    transition background .3s ease

    +w(bp-w-big)
      height 60px

    &:hover
      background darken(neptuneColor, 10)
      transition background .3s ease

// Inspirations section
.inspirations
  padding 80px 0

  +w(bp-w-large)
    padding 60px 0

  &__text
    margin-top 40px
    font-family SFCompactText-Regular
    font-size 16px
    line-height 24px
    color lightGreyColor
    width 40%
    margin 0 auto
    text-align center

    +w(bp-w-big)
      width 100%
      margin-top 30px


  &__list
    margin-top 30px

  &__info
    position relative
    z-index 100
    color #fff

  &__item
    border-radius 8px
    padding 40px
    position relative
    overflow hidden
    display flex
    align-items flex-end
    +w(bp-w-small)
      padding 20px
    &:before
      content ''
      coverdiv()
      background linear-gradient(180deg, rgba(0, 0, 0, .0001) 50%, rgba(0, 0, 0, .461617) 100%)

  &__category
    font-size 10px
    line-height 12px
    letter-spacing 1.1px
    text-transform uppercase
    color #fff
    margin-bottom 101px

  &__title
    font-size 28px
    line-height 40px
    color #fff
    margin-bottom 10px

  &__peoples
    display flex

  &__people
    border-radius 50%
    width 48px
    height 48px
    border 3px solid #fff

    &:not(:last-child)
      margin-right 10px

  &__feature
    position absolute
    right 40px
    top 40px
    border 1px solid #fff
    background rgba(#090E0C, .4)

  &__play-btn
    width 50px
    height 50px
    border-radius 50%
    border 2px solid #fff
    position absolute
    top 40px
    left 40px
    cursor pointer

    &:before
      content ''
      position absolute
      top 50%
      left 55%
      transform translate(-35%, -50%)
      css-triangle(10px, #fff, right)

.grid
  display grid
  grid-template-columns 1fr 1fr 1fr
  grid-auto-rows minmax(300px, auto)
  grid-gap 32px

  +wmin(bp-w-large)
    .item-tall
      grid-column span 2 / auto

    .item-height
      grid-row span 2 / auto

  +w(bp-w-large)
    grid-template-columns 1fr

  &__item
    coverbg()


// Footer section
.footer
  &__conteiner
    padding-top 50px
    padding-bottom 100px
    display grid
    grid-template-columns repeat(auto-fit, minmax(200px, 1fr))
    grid-gap 20px

    +w(bp-w-large)
      padding-bottom 50px

    +w(bp-w-big)
      flex 1 0 50%

  &__column
    display flex
    flex-direction column
    margin-top 20px

  &__title
    font-family HelveticaNeue-Bold
    font-size 12px
    line-height 14px
    letter-spacing 2.15px
    text-transform uppercase
    color #100E0B

  &__line
    background #57A773
    width 48px
    height 1px
    display block
    margin 20px 0

  &__list
    display flex
    flex-direction column

  &__item
    &:not(:last-child)
      margin-bottom 10px

  &__link
    font-size 13px
    line-height 29px
    color #959EA6

  &__bottom
    padding 32px 0
    border-top 1px solid #D9D9D9

    &__container
      display flex
      justify-content space-between
      align-items center

      +w(bp-w-big)
        flex-direction column

  &__info
    display flex
    flex-direction column

    +w(bp-w-big)
      align-items center
      order 0
      margin-bottom 20px

  &__tems
    margin-bottom 10px

  &__tems, &__privacy, &__copyright
    font-family SFProText-Regular
    font-size 13px
    line-height 15px
    color #959EA6

  &__copyright
    +w(bp-w-big)
      order 1
      text-align center

.subscribe-form
  display flex
  flex-direction column
  max-width 360px

  &__input
    margin-bottom 16px
    background #FFFFFF
    border 1px solid #E4E4E4
    border-radius 8px
    padding 23px 30px

  &__button
    border-radius 8px
    padding 25px 0
    text-transform uppercase
    background-color neptuneColor
    color #fff
    transition background .3s ease

    &:hover
      background darken(neptuneColor, 10)
      transition background .3s ease
